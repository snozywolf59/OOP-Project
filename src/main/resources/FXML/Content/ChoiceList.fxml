            <Font size="19.0" />
         </font>
         <graphic>
            <FontAwesomeIconView glyphName="BOOK" size="2em" />
         </graphic>
      </ToggleButton>
      <ToggleButton fx:id="gameBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="160.0" text="GAME">
         <font>
            <Font size="19.0" />
         </font>
         <graphic>
            <FontAwesomeIconView glyphName="PLAY" size="2em" text="" />
         </graphic>
      </ToggleButton>
      <ToggleButton fx:id="apiBtn" mnemonicParsing="false" text="API">
         <graphic>
            <FontAwesomeIconView glyphName="CHAIN" />
         </graphic>
      </ToggleButton>
      <ToggleButton fx:id="exitBtn" mnemonicParsing="false" styleClass="exit" text="EXIT">
         <graphic>
            <FontAwesomeIconView glyphName="EXTERNAL_LINK" size="2em" />
         </graphic>
         <font>
            <Font size="19.0" />
         </font>
      </ToggleButton>
   </VBox>
</AnchorPane>
