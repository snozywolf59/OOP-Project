<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1095.0" styleClass="bg" stylesheets="@../../Css/ggtranslate.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dictionary.Controllers.Content.GGTranslate.GGTranslateController">
    <children>
      <MediaView fx:id="mediaView" fitHeight="800.0" fitWidth="1300.0" />
        <VBox layoutX="589.0" layoutY="135.0" prefHeight="250.0" prefWidth="400.0" styleClass="origin" AnchorPane.rightAnchor="311.0" AnchorPane.topAnchor="135.0">
            <children>
                <HBox prefHeight="26.0" prefWidth="250.0">
                    <children>
                        <MenuButton fx:id="buttonToLanguage" mnemonicParsing="false" prefHeight="25.0" prefWidth="140.0" text="Tiếng Việt">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#getLangTo" text="English" />
                                <MenuItem mnemonicParsing="false" onAction="#getLangTo" text="Tiếng Việt" />
                            </items>
                        </MenuButton>
                        <Button mnemonicParsing="false" onAction="#speak2" prefHeight="26.0" prefWidth="111.0" styleClass="orgButton">
                            <graphic>
                                <FontAwesomeIconView glyphName="VOLUME_UP" />
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <TextArea fx:id="resultText" editable="false" prefHeight="200.0" prefWidth="200.0" styleClass="content" wrapText="true" />
            </children></VBox>
        <VBox layoutX="40.0" layoutY="135.0" prefHeight="250.0" prefWidth="400.0" styleClass="origin" stylesheets="@../../Css/ggtranslate.css" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="135.0">
            <children>
                <HBox prefHeight="39.0" prefWidth="423.0">
                    <children>
                        <MenuButton fx:id="buttonFromLanguage" mnemonicParsing="false" prefHeight="40.0" prefWidth="158.0" text="English">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#getLangFrom" text="English" />
                                <MenuItem mnemonicParsing="false" onAction="#getLangFrom" text="Tiếng Việt" />
                            </items>
                        </MenuButton>
                        <ToggleButton mnemonicParsing="false" onAction="#doRecord" prefHeight="40.0" prefWidth="121.0" styleClass="toggleButton">
                            <graphic>
                                <FontAwesomeIconView glyphName="MICROPHONE" />
                            </graphic>
                        </ToggleButton>

                        <Button mnemonicParsing="false" onAction="#speak1" prefHeight="40.0" prefWidth="123.0" styleClass="orgButton" textFill="#0b4473">
                            <graphic>
                                <FontAwesomeIconView glyphName="VOLUME_UP" size="20.0" />
                            </graphic></Button>

                    </children>
                </HBox>
                <TextArea fx:id="originalText" prefHeight="221.0" prefWidth="338.0" promptText="Fill the text" stylesheets="@../../Css/ggtranslate.css" wrapText="true">
                    <font>
                        <Font size="23.0" />
                    </font>
                </TextArea>
            </children>
        </VBox>
        <Button layoutX="528.0" layoutY="135.0" mnemonicParsing="false" onAction="#swap" prefHeight="20.0" prefWidth="0.0" styleClass="swap" AnchorPane.leftAnchor="528.0" AnchorPane.topAnchor="135.0">
            <graphic>
                <VBox prefHeight="32.0" prefWidth="32.0">
                    <children>
                        <FontAwesomeIconView glyphName="ARROW_LEFT" size="15" />
                        <FontAwesomeIconView glyphName="ARROW_RIGHT" size="15" />
                    </children>
                </VBox>
            </graphic></Button>
        <MenuButton layoutX="512.0" layoutY="270.0" mnemonicParsing="false" styleClass="mode" text="Action">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#actionCheck" text="Check" />
                <MenuItem mnemonicParsing="false" onAction="#rewrite" text="Rewrite" />
                <MenuItem mnemonicParsing="false" onAction="#chatAI" text="AI Chat" />
                <MenuItem mnemonicParsing="false" onAction="#translate" text="Translate" />
            </items>
        </MenuButton>
    </children>
</AnchorPane>
